{
    "name": "vscode-language-todo",
    "displayName": "vscode-language-todo",
    "description": "Todo syntaxes for VSCode",
    "version": "0.0.1",
    "publisher": "fireyy",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Languages"
    ],
    "scripts": {
        "update-grammar": "node ./build/update-grammar.js atom/language-todo grammars/todo.cson ./syntaxes/todo.json"
    },
    "contributes": {
        "languages": [
            {
                "id": "todo",
                "aliases": [
                    "TODO",
                    "todo"
                ],
                "extensions": [],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "injectTo": [
                    "text.html.basic",
                    "text.html.markdown",
                    "source.css",
                    "source.js",
                    "source.ts",
                    "source.tsx"
                ],
                "scopeName": "text.todo",
                "path": "./syntaxes/todo.json"
            }
        ]
    },
    "devDependencies": {
        "cson-parser": "^1.3.3",
        "vsce": "^1.35.0"
    }
}
